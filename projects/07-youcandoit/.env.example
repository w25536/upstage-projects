# =============================================================================
# AI Agent Orchestrator - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# LLM Provider Settings
# =============================================================================
# Choose one: llama, upstage, openai
LLM_PROVIDER=upstage

# -----------------------------------------------------------------------------
# Upstage Solar (Cloud, Korean-Optimized, Default)
# -----------------------------------------------------------------------------
# Get your API key from: https://console.upstage.ai/
UPSTAGE_API_KEY=up-your-api-key-here
UPSTAGE_MODEL=solar-pro2
UPSTAGE_BASE_URL=https://api.upstage.ai/v1/solar

# -----------------------------------------------------------------------------
# LLaMA (via Ollama) (Local, Free)
# -----------------------------------------------------------------------------
# 1. Install Ollama: https://ollama.com/download
# 2. Pull model: ollama pull llama3.2:3b
# 3. start_demo.py will automatically check Ollama setup
# LLM_PROVIDER=llama
# OLLAMA_MODEL=llama3.2:3b
# OLLAMA_BASE_URL=http://localhost:11434/v1

# -----------------------------------------------------------------------------
# OpenAI (Cloud, General Purpose)
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# MCP Server Settings (for Daily Briefing)
# =============================================================================

# -----------------------------------------------------------------------------
# Gmail MCP
# -----------------------------------------------------------------------------
# 1. Create Google Cloud Project: https://console.cloud.google.com/
# 2. Enable Gmail API
# 3. Create OAuth 2.0 credentials (Desktop App)
# 4. Download JSON file
# 5. Run: uv run python scripts/setup_env.py
# 6. Or manually copy to ~/.gmail-mcp/gcp-oauth.keys.json
GMAIL_CREDENTIALS=~/.gmail-mcp/gcp-oauth.keys.json
GMAIL_TOKEN_PATH=~/.gmail-mcp/credentials.json

# -----------------------------------------------------------------------------
# Notion MCP
# -----------------------------------------------------------------------------
# 1. Create Notion Integration: https://www.notion.so/my-integrations
# 2. Get API key (starts with "secret_")
# 3. Share parent page with integration
# 4. Get parent page ID from URL
NOTION_API_KEY=secret_your_notion_integration_token
NOTION_PARENT_PAGE_ID=your-parent-page-id

# -----------------------------------------------------------------------------
# Slack MCP (Optional)
# -----------------------------------------------------------------------------
# 1. Create Slack App: https://api.slack.com/apps
# 2. Add OAuth scopes: channels:history, channels:read, users:read, im:history, im:read
# 3. Install to workspace
# 4. Get User OAuth Token (starts with "xoxp-")
SLACK_MCP_XOXP_TOKEN=xoxp-your-slack-user-token

# =============================================================================
# Server Configuration
# =============================================================================
AGENT_PORT=8001
CONTEXT_REGISTRY_PORT=8002
BACKOFFICE_PORT=8003
MCP_SERVER_PORT=8000
MCP_SERVER_TRANSPORT=http

# =============================================================================
# Database Paths
# =============================================================================
CONTEXT_REGISTRY_DB_PATH=context_registry/context_registry.db
BACKOFFICE_DB_PATH=backoffice/jobs.db

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Daily Briefing Schedule
# =============================================================================
# Cron format: minute hour day month day_of_week
# Default: 0 7 * * * (Every day at 07:00 KST)
BRIEFING_CRON_SCHEDULE=0 7 * * *
